{
  "name": "@blockquote-playground/todo-app",
  "version": "1.0.0-rc.1",
  "description": "Webcomponent todo-app following open-wc recommendations",
  "keywords": [
    "lit",
    "web-component",
    "lit-element"
  ],
  "license": "MIT",
  "author": "todo-app",
  "type": "module",
  "exports": {
    ".": {
      "default": "./dist/src/index.js"
    },
    "./package.json": {
      "default": "./package.json"
    },
    "./TodoApp.js": {
      "default": "./dist/src/TodoApp.js"
    },
    "./todo-app.js": {
      "default": "./dist/src/define/todo-app.js"
    },
    "./index.js": {
      "default": "./dist/src/index.js"
    }
  },
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "files": [
    "/dist/",
    "/dist/index.*",
    "!/dist/test/"
  ],
  "scripts": {
    "analyze": "wireit",
    "build": "wireit",
    "build:tsc": "wireit",
    "dev:vite": "wireit",
    "format": "wireit",
    "format:eslint": "wireit",
    "format:prettier": "wireit",
    "format:stylelint": "wireit",
    "postinstall": "wireit",
    "prepare": "wireit",
    "preview:vite": "wireit",
    "sass:watch": "wireit",
    "sort:package": "wireit",
    "start": "wireit",
    "test": "wireit",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"OUTDIR=dist wtr --watch\"",
    "vite": "wireit"
  },
  "lint-staged": {
    "**/*.{js,ts,html}": [
      "npm run format:eslint"
    ],
    "**/*.{js,ts,json,html}": [
      "npm run format:prettier"
    ],
    "**/*.{scss,css}": [
      "npm run format:stylelint"
    ]
  },
  "prettier": {
    "bracketSameLine": true,
    "bracketSpacing": false,
    "htmlWhitespaceSensitivity": "ignore",
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5",
    "overrides": [
      {
        "files": "*.{scss,css}",
        "options": {
          "printWidth": 280,
          "singleQuote": false
        }
      }
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard-scss",
    "rules": {
      "custom-property-pattern": null,
      "no-duplicate-selectors": null,
      "color-function-notation": null,
      "alpha-value-notation": null
    }
  },
  "dependencies": {
    "@lit-labs/signals": "^0.1.1",
    "@material/web": "^2.2.0",
    "lit": "^3.2.1",
    "signal-utils": "^0.21.1"
  },
  "devDependencies": {
    "@blockquote/cem-to-markdown-readme": "^1.0.0",
    "@blockquote/coverage-table-reporter": "^1.2.0",
    "@blockquote/rollup-plugin-externalize-source-dependencies": "^1.0.0",
    "@blockquote/rollup-plugin-total-bundlesize": "^2.2.0",
    "@blockquote/sass-style-template": "^5.0.0",
    "@custom-elements-manifest/analyzer": "^0.10.4",
    "@html-eslint/eslint-plugin": "^0.32.0",
    "@html-eslint/parser": "^0.32.0",
    "@open-wc/testing": "^4.0.0",
    "@types/mocha": "^10.0.10",
    "@typescript-eslint/parser": "^8.20.0",
    "@web/rollup-plugin-html": "^2.3.0",
    "@web/test-runner": "^0.19.0",
    "@web/test-runner-playwright": "^0.11.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-lit": "^1.15.0",
    "eslint-plugin-lit-a11y": "^4.1.4",
    "eslint-plugin-wc": "^2.2.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.1",
    "prettier": "^3.4.2",
    "sort-package-json": "^2.14.0",
    "stylelint": "^16.13.2",
    "stylelint-config-standard-scss": "^14.0.0",
    "ts-lit-plugin": "^2.0.2",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.0.7",
    "wireit": "^0.14.9"
  },
  "publishConfig": {
    "access": "public"
  },
  "customElements": "custom-elements.json",
  "wireit": {
    "analyze": {
      "command": "cem analyze --litelement --globs \"src/**/*.{js,ts}\"",
      "files": [
        "src/**/*.{js,ts}"
      ]
    },
    "format": {
      "dependencies": [
        "format:eslint",
        "format:prettier",
        "format:stylelint"
      ]
    },
    "format:eslint": {
      "command": "eslint . --fix --color ",
      "files": [
        ".eslintrc.js",
        "src/**/*.{js,ts}"
      ]
    },
    "format:prettier": {
      "command": "prettier \"**/*.{js,ts,json,html}\" --write --ignore-path .prettierignore",
      "files": [
        "src/**/*.{js,ts,json,html}"
      ]
    },
    "format:stylelint": {
      "command": "stylelint \"**/*.{scss,css}\" --fix --allow-empty-input --ignore-path .prettierignore",
      "files": [
        "src/**/*.{scss,css}"
      ]
    },
    "vite": {
      "command": "vite",
      "service": {
        "readyWhen": {
          "lineMatches": "VITE"
        }
      },
      "files": [
        "vite.config.{js,ts}"
      ]
    },
    "dev:vite": {
      "command": "vite build",
      "files": [
        "vite.config.{js,ts}"
      ]
    },
    "preview:vite": {
      "command": "vite preview",
      "files": [
        "vite.config.{js,ts}"
      ]
    },
    "postinstall": {
      "command": "npm run sort:package"
    },
    "prepare": {
      "command": "husky"
    },
    "start": {
      "command": "sass-style-template -h -j ts",
      "service": true,
      "files": [
        "src/**/*.scss"
      ],
      "dependencies": [
        {
          "script": "vite",
          "cascade": false
        }
      ]
    },
    "sort:package": {
      "command": "npx sort-package-json",
      "files": [
        "package.json"
      ]
    },
    "test": {
      "command": "tsc && OUTDIR=dist wtr",
      "files": [
        "src/**/*.{js,ts}",
        "tsconfig.json"
      ]
    }
  }
}
