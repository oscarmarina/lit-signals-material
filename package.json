{
  "name": "@blockquote-playground/todo-app",
  "version": "1.0.0-rc.1",
  "description": "Webcomponent todo-app following open-wc recommendations",
  "keywords": [
    "lit",
    "web-component",
    "lit-element"
  ],
  "license": "MIT",
  "author": "todo-app",
  "type": "module",
  "exports": {
    ".": {
      "default": "./dist/index.js"
    },
    "./package.json": {
      "default": "./package.json"
    },
    "./TodoApp.js": {
      "default": "./dist/TodoApp.js"
    },
    "./todo-app.js": {
      "default": "./dist/define/todo-app.js"
    },
    "./index.js": {
      "default": "./dist/index.js"
    },
    "./todo-app-styles.css.js": {
      "default": "./dist/styles/todo-app-styles.css.js"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "/src/",
    "/dist/"
  ],
  "scripts": {
    "analyze": "wireit",
    "build": "wireit",
    "build:lib": "wireit",
    "build:tsc": "wireit",
    "dev:vite": "wireit",
    "format": "wireit",
    "format:biome": "wireit",
    "format:eslint": "wireit",
    "format:pre": "wireit",
    "format:prettier": "wireit",
    "format:stylelint": "wireit",
    "postinstall": "wireit",
    "prepare": "wireit",
    "preview:vite": "wireit",
    "sass:watch": "wireit",
    "sort:package": "wireit",
    "start": "wireit",
    "test": "wireit",
    "test:watch": "vitest",
    "vite": "wireit"
  },
  "lint-staged": {
    "**/*.{js,ts,html}": [
      "npm run format"
    ],
    "**/*.json": [
      "npm run format:prettier"
    ],
    "**/*.{scss,css}": [
      "npm run format:prettier",
      "npm run format:stylelint"
    ]
  },
  "prettier": {
    "bracketSameLine": true,
    "bracketSpacing": false,
    "htmlWhitespaceSensitivity": "ignore",
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5",
    "overrides": [
      {
        "files": "*.{scss,css}",
        "options": {
          "singleQuote": false
        }
      },
      {
        "files": "*.json",
        "options": {
          "parser": "json-stringify"
        }
      }
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard-scss",
    "allowEmptyInput": true,
    "rules": {
      "custom-property-pattern": null,
      "no-duplicate-selectors": null,
      "color-function-notation": null,
      "alpha-value-notation": null,
      "media-feature-name-no-unknown": null,
      "comment-empty-line-before": null,
      "declaration-empty-line-before": null,
      "property-no-vendor-prefix": null,
      "selector-attribute-quotes": null,
      "value-no-vendor-prefix": null
    },
    "overrides": [
      {
        "files": [
          "**/*.html"
        ],
        "customSyntax": "postcss-html"
      },
      {
        "files": [
          "**/*.{ts,js}"
        ],
        "customSyntax": "postcss-lit"
      }
    ]
  },
  "dependencies": {
    "@lit-labs/signals": "^0.2.0",
    "@material/web": "^2.4.1",
    "lit": "^3.3.2",
    "signal-utils": "^0.21.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@blockquote/cem-to-markdown-readme": "^1.0.0",
    "@blockquote/rollup-plugin-externalize-source-dependencies": "^1.0.0",
    "@blockquote/rollup-plugin-total-bundlesize": "^2.2.0",
    "@blockquote/sass-style-template": "^5.0.2",
    "@custom-elements-manifest/analyzer": "^0.11.0",
    "@lit-labs/rollup-plugin-minify-html-literals": "^0.1.1",
    "@open-wc/semantic-dom-diff": "^0.20.1",
    "@open-wc/testing-helpers": "^3.0.1",
    "@types/mocha": "^10.0.10",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-istanbul": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "chai-a11y-axe": "^1.5.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-lit": "^2.1.1",
    "eslint-plugin-lit-a11y": "^5.1.1",
    "eslint-plugin-wc": "^3.0.2",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "postcss-html": "1.8.0",
    "postcss-lit": "^1.3.1",
    "prettier": "^3.7.4",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-node-externals": "^8.1.2",
    "sort-package-json": "^3.6.0",
    "stylelint": "^16.26.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "tinyglobby": "^0.2.15",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.16",
    "wireit": "^0.14.12"
  },
  "publishConfig": {
    "access": "public"
  },
  "customElements": "custom-elements.json",
  "wireit": {
    "analyze": {
      "command": "cem analyze --litelement --globs \"src/**/*.{js,ts}\"",
      "files": [
        "src/**/*.{js,ts}"
      ]
    },
    "format:pre": {
      "dependencies": [
        "format:eslint",
        "format:prettier",
        "format:stylelint"
      ]
    },
    "format": {
      "dependencies": [
        "format:biome",
        "format:eslint",
        "format:stylelint"
      ]
    },
    "format:biome": {
      "command": "biome check --write --no-errors-on-unmatched",
      "files": [
        "biome.json",
        "src/**/*.{js,ts,json,html,css,scss}",
        "vite.config.js"
      ]
    },
    "format:eslint": {
      "command": "eslint . --fix",
      "files": [
        "eslint.config.js",
        "src/**/*.{js,ts}"
      ]
    },
    "format:prettier": {
      "command": "prettier \"**/*.{js,ts,json,html}\" --write --ignore-path .linterignore",
      "files": [
        "src/**/*.{js,ts,json,html}"
      ]
    },
    "format:stylelint": {
      "command": "stylelint \"**/*.{scss,css}\" --fix --allow-empty-input --ignore-path .linterignore",
      "files": [
        "src/**/*.{scss,css}"
      ]
    },
    "vite": {
      "command": "vite",
      "service": {
        "readyWhen": {
          "lineMatches": "VITE"
        }
      },
      "files": [
        "vite.config.{js,ts}"
      ]
    },
    "dev:vite": {
      "command": "vite build",
      "files": [
        "vite.config.{js,ts}"
      ]
    },
    "preview:vite": {
      "command": "vite preview",
      "files": [
        "vite.config.{js,ts}"
      ]
    },
    "postinstall": {
      "command": "npm run sort:package"
    },
    "prepare": {
      "command": "husky"
    },
    "start": {
      "command": "sass-style-template -h -j ts",
      "service": true,
      "files": [
        "src/**/*.scss"
      ],
      "dependencies": [
        {
          "script": "vite",
          "cascade": false
        }
      ]
    },
    "sort:package": {
      "command": "npx sort-package-json",
      "files": [
        "package.json"
      ]
    },
    "test": {
      "command": "vitest",
      "files": [
        "test/**/*.{js,ts}"
      ]
    },
    "test:watch": {
      "command": "vitest --browser.headless=false",
      "files": [
        "test/**/*.{js,ts}"
      ]
    },
    "build:lib": {
      "command": "vite build --config vite.lib.config.js",
      "files": [
        "vite.lib.config.js"
      ]
    },
    "build:tsc": {
      "command": "tsc",
      "files": [
        "tsconfig.json"
      ]
    },
    "build": {
      "dependencies": [
        "dev:vite",
        "build:lib",
        "build:tsc"
      ]
    }
  }
}
